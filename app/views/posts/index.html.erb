<h1>Page Posts</h1>
<%= link_to  "New Post", new_post_path, class: "btn btn-primary" %>
<hr>
<div class="w3-row-padding">
  <% @posts.each do |post| %>
  <%= link_to  post do %>
  <div class="w3-third w3-container w3-hover-opacity  my-blog-item">
    <!-- <div style="width: 100%; height: 100%; max-height:350px" class="img-responsive">
      <img src="<%=post.cover_url.to_s%>" alt="cover" style="width: 100%; height: 100%; max-height:350px">
    </div> -->
    <%= image_tag(post.cover_url.to_s, alt: 'Image', class: "img-responsive", style: "width: 100%; height: 20vw; ;min-height:200px")%>
    <div class="w3-container w3-white">
      <h3>
        <b><%= post.title %></b>
      </h3>
      <p>
        <i>By: KUGA on
          <%= post.created_at.strftime('%B, %d, %Y') %></i>
      </p>
      <p>
        <i><%= post.num_views %>
          Views |
          <%= post.comments.count %>
          Comments</i>
      </p>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
