<%= form_for @post, :html => {:multipart => true} do |f|%>
  <% if @post.errors.any? %>
  <div id="errors">
    <h2>
      <%= pluralize(@post.errors.count, "error") %>
      prevented this post from saving
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<div class="form-group">
  <%= f.file_field :cover, id: "blog-cover", class:"form-control-file", required: true %>

</div>
<div class="form-group">
  <%= f.text_field :title, class: "form-control input-lg", placeholder: "Title", required: true %>
</div>
<div class="form-group">
  <%= f.text_area :body, class: "form-control", placeholder: "Body", required: true, rows: 10%>
</div>
<div class="form-group">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>
<% end%>
