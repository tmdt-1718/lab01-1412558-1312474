<%= form_for(@album) do |f| %>
<hr class="divider-w mt-10 mb-20">
<br/>
<div class="form-group">
  <%= f.text_field :name, class: "form-control input-lg", placeholder: "Title", required: true %>
</div>
<div class="row">
  <div class="col-lg-4 col-md-6 col-sm-12 ">
    <img id="preview" src="#" class="img-fluid"/>
  </div>
</div>
<div class="form-group">
  <%= f.fields_for(@image) do |e| %>
  <%= e.file_field :url, id: "album-cover", class:"form-control-file", required: true %>
  <% end %>
</div>
<div class="form-group">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>
<% end %>
