<%= form_for(@album) do |f| %>
<hr class="divider-w mt-10 mb-20">
<br/>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label :Title %>
  </div>
  <%= f.text_field :title, class: "form-control input-lg", placeholder: "Title", required: true %>
</div>
<div class="row">
  <div class="col-lg-4 col-md-6 col-sm-12 ">
    <img id="preview" src="#" class="img-fluid"/>
  </div>
</div>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label :Cover %>
    </div>
  <%= f.file_field :cover, id: "album-cover", class:"form-control-file", required: true %>
</div>
<div class="form-group">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>
<% end %>
